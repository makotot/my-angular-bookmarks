---
title: my angular bookmarks
script: ['app.js']
---
<div ng-app="bookmarkApp">
	<div ng-controller="BookmarkCtrl">
		<input type="text" ng-model="search" placeholder="search.." />
		<p><% bookmarkCount %> bookmarks</p>
		<ul>
			<li ng-repeat="bookmark in bookmarks | filter:search">
				<a href="<% bookmark.url %>"><% bookmark.title %></a>
				<ul>
					<li ng-repeat="tag in bookmark.tags">
						<a href="#"><% tag %></a>
					</li>
				</ul>
			</li>
		</ul>
	</div>
</div>
